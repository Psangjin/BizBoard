<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user_mapper">

    
    <!-- 회원가입 -->
    <insert id="insertUser" parameterType="User">
        INSERT INTO users (
            id, pw, email, name
        ) VALUES (
            #{id},
            #{pw},
            #{email},
            #{name}
           
        )
    </insert>
    
       


    <!-- 로그인 -->
   <!--  <select id="loginUser" parameterType="User" resultType="User">
        SELECT *
        FROM users
        WHERE id = #{id}
        AND pw = #{pw}
    </select> -->


	
 	<!-- SNS 로그인 시 회원 찾기 -->
    <select id="findByProvider" parameterType="User" resultType="User">
        SELECT *
        FROM users
        WHERE provider = #{provider}
        AND provider_id = #{providerId}
    </select>


    <!-- 회원 정보 조회 -->
    <select id="getUserById" parameterType="String" resultType="User">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>
    
    
    <!-- 이메일 중복 체크 -->
    <select id="findByEmail" parameterType="String" resultType="User">
	    SELECT *
	    FROM users
	    WHERE email = #{email}
	</select>
	    
	    
	<!-- 비번 변경 -->
	<update id="updateUserPassword" parameterType="User">
	  UPDATE USERS
	  SET PW = #{pw}
	  WHERE ID = #{id}
	</update>
	
	
	<!-- 회원 삭제 -->
	<delete id="deleteUser" parameterType="string">
	  DELETE FROM USERS
	  WHERE ID = #{id}
	</delete>


	<!-- 이메일 중복 체크 (본인 제외) -->
	<select id="checkEmailDuplicate" parameterType="User" resultType="int">
	  SELECT COUNT(*)
	  FROM users
	  WHERE email = #{email}
	    AND id != #{id}
	</select>
	
	
	<!-- 프로필 전체 업데이트 -->
	<update id="updateUserProfile" parameterType="User">
	    UPDATE users
	    SET 
	        name = #{name},
	        email = #{email}
	    WHERE id = #{id}
	</update>
	


</mapper>
